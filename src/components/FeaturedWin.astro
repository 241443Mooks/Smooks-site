---
import Button from "./ui/Button.astro";
const { title, statA, statB, blurb, ctaHref } = Astro.props;
import Container from "./ui/Container.astro";

---
<section class="py-12 border-y" style="border-color: var(--border); background: var(--bg);">
  <Container>
    <div class="grid gap-8 lg:grid-cols-[2fr,1fr]">
      <div>
        <h2 class="text-2xl font-semibold">{title}</h2>
        <p class="mt-3 text-[var(--c-on-muted)]">{blurb}</p>
        <div class="mt-6"><Button href={ctaHref} variant="primary">Read the full story</Button></div>
      </div>
      <dl class="grid grid-cols-2 gap-6">
        <div class="card p-4">
          <dt class="text-sm text-[var(--c-on-muted)]">{statA.label}</dt>
          <dd class="text-2xl font-bold">{statA.value}</dd>
        </div>
        <div class="card p-4">
          <dt class="text-sm text-[var(--c-on-muted)]">{statB.label}</dt>
          <dd class="text-2xl font-bold">{statB.value}</dd>
        </div>
      </dl>
    </div>
  </Container>
</section>

