---
import Button from "./ui/Button.astro";
const { title, statA, statB, blurb, ctaHref } = Astro.props;
---
<section class="border-t border-gray-200">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:py-16">
    <header class="mb-6">
      <h2 class="text-2xl font-semibold tracking-tight text-gray-900 sm:text-3xl">
        {title}
      </h2>
      <p class="sr-only">Impact highlights</p>
    </header>

    <div class="grid gap-8 lg:grid-cols-5 lg:items-center">
      <!-- stats first for impact -->
      <ul class="grid grid-cols-2 gap-4 lg:col-span-2" aria-label="Key metrics">
        <li class="rounded-2xl border border-gray-200 p-6">
          <p class="text-3xl font-bold text-gray-900">{statA.value}</p>
          <p class="mt-1 text-sm text-gray-600">{statA.label}</p>
        </li>
        <li class="rounded-2xl border border-gray-200 p-6">
          <p class="text-3xl font-bold text-gray-900">{statB.value}</p>
          <p class="mt-1 text-sm text-gray-600">{statB.label}</p>
        </li>
      </ul>

      <div class="lg:col-span-3">
        <p class="max-w-2xl text-gray-700">{blurb}</p>
        <div class="mt-6">
          <Button href={ctaHref} ariaLabel="Read the full story">Read the Full Story â†’</Button>
        </div>
      </div>
    </div>
  </div>
</section>
