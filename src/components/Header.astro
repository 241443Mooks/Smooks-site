---
const links = [
  { href: "/", label: "Home" },
  { href: "/system-wins", label: "Systems Wins" },
  { href: "/playbooks", label: "Playbooks" },
  { href: "/writing", label: "Writing" },
  { href: "/about", label: "About" },
  { href: "/contact", label: "Contact" },
];
const { currentPath = "/" } = Astro.props;
---
<a href="#content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-white text-black px-3 py-2 rounded">
  Skip to content
</a>

<header class="w-full border-b border-white/10 bg-zinc-950 text-zinc-100">
  <nav class="mx-auto max-w-6xl px-4 py-4 flex items-center justify-between">
    <a href="/" class="text-xl font-semibold">SMooks</a>
    <ul class="flex gap-4">
      {links.map(link => (
        <li>
          <a
            href={link.href}
            aria-current={currentPath === link.href ? "page" : undefined}
            class="px-3 py-1 rounded-xl hover:bg-white/10 focus-visible:bg-white/10
                   {currentPath === link.href ? 'bg-white/10' : ''}"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
