---
const { href = "#", variant = "primary", children, ariaLabel } = Astro.props;

const base =
  "inline-flex items-center justify-center rounded-xl px-4 py-2 text-sm font-medium focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 transition";
const variants = {
  primary:
    "bg-black text-white hover:bg-gray-800 focus-visible:ring-black ring-offset-white",
  ghost:
    "bg-transparent text-gray-900 hover:bg-gray-100 focus-visible:ring-gray-300 ring-offset-white",
  link:
    "text-gray-900 underline underline-offset-4 hover:no-underline focus-visible:ring-gray-300 ring-offset-white",
};
---
<a href={href} aria-label={ariaLabel} class={`${base} ${variants[variant]}`}>
  <slot />
</a>
