---
const { variant = "info" } = Astro.props;
const styles = {
  info: "bg-blue-500/10 border-blue-400/30",
  success: "bg-green-500/10 border-green-400/30",
  warn: "bg-yellow-500/10 border-yellow-400/30",
};
---
<div class={`my-4 rounded-xl border p-4 ${styles[variant] ?? styles.info}`}>
  <slot />
</div>
