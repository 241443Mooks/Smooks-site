---
import Button from "./ui/Button.astro";
const { title, summary, ctaHref } = Astro.props;
import Container from "./ui/Container.astro";

---
<section class="py-14 border-t" style="border-color: var(--border);">
  <Container>
    <div class="grid items-start gap-6 lg:grid-cols-[2fr,1fr]">
      <div>
        <h2 class="text-2xl font-semibold">{title}</h2>
        <p class="mt-2 text-[var(--c-on-muted)]">{summary}</p>
      </div>
      <div class="lg:justify-self-end">
        <Button href={ctaHref} variant="primary">Open Playbooks</Button>
      </div>
    </div>
  </Container>
</section>
