---
import Button from "./ui/Button.astro";
const { title, summary, ctaHref } = Astro.props;
---
<section class="border-t border-gray-200">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:py-16">
    <div class="grid gap-8 lg:grid-cols-5 lg:items-center">
      <div class="lg:col-span-3">
        <h2 class="text-2xl font-semibold tracking-tight text-gray-900 sm:text-3xl">{title}</h2>
        <p class="mt-3 max-w-2xl text-gray-700">{summary}</p>
        <div class="mt-6">
          <Button href={ctaHref} ariaLabel="See all playbooks">See All Playbooks â†’</Button>
        </div>
      </div>
      <div class="lg:col-span-2">
        <div class="aspect-[4/3] w-full rounded-2xl border border-gray-200 bg-white" role="img" aria-label="Playbook illustration"></div>
      </div>
    </div>
  </div>
</section>
