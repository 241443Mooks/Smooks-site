---
import Button from "./ui/Button.astro";
const { blurb, ctaHref, imgSrc = "", imgAlt = "Portrait of Sharron Mooks" } = Astro.props;
---
<section class="border-t border-gray-200">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:py-16">
    <div class="grid gap-8 lg:grid-cols-5 lg:items-center">
      <div class="lg:col-span-3">
        <h2 class="text-2xl font-semibold tracking-tight text-gray-900 sm:text-3xl">About</h2>
        <p class="mt-3 max-w-2xl text-gray-700">{blurb}</p>
        <div class="mt-6">
          <Button href={ctaHref} ariaLabel="Read more about me">Read More About Me â†’</Button>
        </div>
      </div>
      <div class="lg:col-span-2">
        <img src={imgSrc} alt={imgAlt} class="mx-auto h-40 w-40 rounded-full object-cover ring-2 ring-gray-200" loading="lazy" />
      </div>
    </div>
  </div>
</section>
