---
import Button from "./ui/Button.astro";
const { posts = [] } = Astro.props;
/** posts = [{ title, href, excerpt? }] */
---
<section class="border-t border-gray-200">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:py-16">
    <div class="flex items-end justify-between gap-4">
      <h2 class="text-2xl font-semibold tracking-tight text-gray-900 sm:text-3xl">Latest Writing</h2>
      <Button variant="ghost" href="/writing" ariaLabel="Explore writing">Explore Writing â†’</Button>
    </div>

    <ul class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {posts.slice(0,3).map((p) => (
        <li class="rounded-2xl border border-gray-200 p-6 hover:bg-gray-50 focus-within:bg-gray-50">
          <a class="block text-lg font-medium text-gray-900 hover:underline underline-offset-4" href={p.href}>
            {p.title}
          </a>
          {p.excerpt && <p class="mt-2 text-sm text-gray-700">{p.excerpt}</p>}
        </li>
      ))}
    </ul>
  </div>
</section>
