---
import Button from "./ui/Button.astro";
const { posts = [] } = Astro.props;
/** posts = [{ title, href, excerpt? }] */
---
<ul class="mt-6 grid gap-6 sm:grid-cols-3">
  {posts.map((p) => (
    <li class="card p-5 hover:shadow-md">
      <a class="block hover:underline" href={p.href}><span class="font-medium">{p.title}</span></a>
      {p.excerpt && <p class="mt-2 text-sm text-[var(--c-on-muted)]">{p.excerpt}</p>}
    </li>
  ))}
</ul>

