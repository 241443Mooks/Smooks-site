---
interface Props {
  href: string;
  title: string;
  year?: number;
  summary?: string;
  sector?: string;
  streams?: string[];
  tags?: string[];
}
const { href, title, year, summary, sector, streams = [], tags = [] } = Astro.props as Props;
---
<article class="rounded-2xl border border-white/10 p-5 hover:border-white/20 focus-within:border-white/20 transition-colors">
  <header class="flex items-center justify-between gap-4">
    <h2 class="text-lg font-medium">
      <a class="hover:underline focus:outline-none focus-visible:ring-2 focus-visible:ring-white/70 rounded" href={href}>{title}</a>
    </h2>
    {year && <span class="text-xs text-zinc-400 shrink-0">{year}</span>}
  </header>
  {summary && <p class="mt-2 text-sm text-zinc-400">{summary}</p>}
  <div class="mt-3 flex flex-wrap gap-2">
    {sector && <span class="text-[11px] px-2 py-1 rounded-full bg-white/5 border border-white/10">{sector}</span>}
    {streams.map((s) => (
      <span class="text-[11px] px-2 py-1 rounded-full bg-white/5 border border-white/10">{s}</span>
    ))}
    {tags.map((t) => (
      <span class="text-[11px] px-2 py-1 rounded-full bg-white/5 border border-white/10">{t}</span>
    ))}
  </div>
</article>