---
import Button from "./ui/Button.astro";
const { title, subtitle, ctaHref } = Astro.props;
---
<section class="relative">
  <div class="mx-auto max-w-7xl px-4 py-16 sm:py-20 lg:flex lg:items-center lg:gap-10">
    <div class="flex-1">
      <h1 class="text-4xl sm:text-5xl font-semibold tracking-tight">{title}</h1>
      {subtitle && <p class="mt-4 text-lg text-[var(--c-on-muted)]">{subtitle}</p>}
      <div class="mt-8">
        <Button href={ctaHref} ariaLabel="Explore Systems Wins">Explore My Systems Wins â†’</Button>
      </div>
    </div>
    <!-- optional visual: keep simple to stay human-centred -->
    <div class="mt-10 lg:mt-0 lg:flex-1">
      <div class="aspect-[4/3] w-full rounded-2xl border border-gray-200 bg-gradient-to-br from-gray-50 to-white" role="img" aria-label="Illustration of connected systems"></div>
    </div>
  </div>
</section>
