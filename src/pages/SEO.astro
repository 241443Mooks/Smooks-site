const base = Astro.site?.toString() ?? 'https://smooks.co.uk';
const path = Astro.url.pathname.replace(/\/$/, ''); // drop trailing slash

let ogPath = '/og/default.png'; // fallback (put a file at public/og/default.png)
if (path.startsWith('/writing/')) ogPath = `/og${path}.png`;
if (path.startsWith('/system-wins/')) ogPath = `/og${path}.png`;
if (path.startsWith('/playbooks/')) ogPath = `/og${path}.png`;

const ogUrl = new URL(ogPath, base).toString();
---

