---
import "../styles/tailwind.css";
import Header from "../components/Header.astro";

const { title = "SMooks", description = "Systems Wins & Playbooks", currentPath = Astro.url.pathname } = Astro.props;
---
---
import SEO from '@/components/SEO.astro';

---
<html lang="en-GB" class="bg-zinc-950 text-zinc-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
     {import.meta.env.PROD && (
  <script defer data-domain="smooks.co.uk" src="https://plausible.io/js/script.js"></script>
)}
  </head>
  <body>
    <Header currentPath={currentPath} />
    <main id="content" class="mx-auto max-w-6xl px-4 py-10">
      <slot />
    </main>
    <footer class="mt-16 border-t border-white/10">
      <div class="mx-auto max-w-6xl px-4 py-8 text-sm text-zinc-400">
        © {new Date().getFullYear()} SMooks • <a class="underline" href="/privacy">Privacy</a> • <a class="underline" href="/accessibility">Accessibility</a>
      <!-- in your site footer -->
<a href="/writing/rss.xml" class="underline">RSS</a>
</div>
    </footer>
  </body>
</html>
