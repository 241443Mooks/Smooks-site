---
import "../styles/tokens.css";
import "../styles/globals.css";
import Header from "../components/Header.astro";

const {
  title = "Smooks",
  description = "Systems that save time, cut waste, and create space for people to shine."
} = Astro.props;
---
<html lang="en" class:list={{ dark: false }}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=JetBrains+Mono:wght@400;600&family=Source+Sans+3:wght@400;500&display=swap" rel="stylesheet">
    <script is:inline>
      const pref = localStorage.getItem('theme');
      const mql = window.matchMedia?.('(prefers-color-scheme: dark)');
      if (pref === 'dark' || (!pref && mql?.matches)) document.documentElement.classList.add('dark');
    </script>
  </head>
  <body>
    <Header />
    <main id="content" class="mx-auto max-w-6xl px-6 md:px-8 py-12 md:py-16">
      <slot />
    </main>
  </body>
</html>
